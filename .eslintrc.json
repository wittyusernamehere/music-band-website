{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:react/recommended", "prettier", "airbnb", "airbnb/hooks"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier",
         "only-warn"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "max-len": [1, 70, 2, {"ignoreComments": true}]
    }
}
